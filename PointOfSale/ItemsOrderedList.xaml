<UserControl x:Class="PointOfSale.ItemsOrderedList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="300">
    <Grid>
        <!--Size of the grid is 1 column by 2 rows-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="6*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <!--A textbox containing the order number and a spot for the list of ordered items.-->
        <TextBlock Name="orderNumber" HorizontalAlignment="Center" FontWeight="Bold" FontSize="25" Grid.ColumnSpan="2">
                Order #___
        </TextBlock>
        <ListView Name="orderList" Grid.Row="1" Grid.ColumnSpan="2"/>

        <!--Buttons for completing or canceling an order-->
        <Button Grid.Row="2" Content="Finish" FontSize="18" Margin="3"/>
        <Button Grid.Column="1" Grid.Row="2" Content="Cancel" FontSize="18" Margin="3"/>
    </Grid>
</UserControl> 
