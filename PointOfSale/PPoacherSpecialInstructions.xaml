<UserControl x:Class="PointOfSale.PPoacherSpecialInstructions"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="600">
    <Grid>
        <!--Where the list of special instructions will be displayed-->
        <ListView Name ="specialInstructions">

            <!--Changable ingredients list-->
            <Label FontSize="20" FontWeight="DemiBold">
                Ingredients:
            </Label>
            <CheckBox IsChecked="{Binding Path=Sirloin}">
                Sirloin
            </CheckBox>
            <CheckBox IsChecked="{Binding Path=Onion}">
                Onion
            </CheckBox>
            <CheckBox IsChecked="{Binding Path=Roll}">
                Roll
            </CheckBox>
        </ListView>
    </Grid>
</UserControl>
